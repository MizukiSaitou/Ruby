module ChocolateChip
  def chocolate_chip
    @name += "チョコレートチップ"
  end
end

class Drink
  include ChocolateChip
  def initialize(name)
    @name = name
  end

  def name
    @name
  end
end

drink = Drink.new("モカ")
drink.chocolate_chip
p drink.name


module EspressoShot
  Price = 100
end

p EspressoShot::Price


require_relative "whipped_cream"
p WhippedCream.info
