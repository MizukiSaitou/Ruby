menu = {coffee: 300, caffe_latte: 400}
menu[:tea] = 300
puts menu

menu = {coffee: 300, caffe_latte: 400}
menu.delete(:coffee)
puts menu

menu = {coffee: 300, caffe_latte: 400}
menu.default = "紅茶はありませんか？"
puts menu[:tea]

menu = {coffee: 300, caffe_latte: 400}
puts "カフェラテください。" if menu[:caffe_latte] <= 500

